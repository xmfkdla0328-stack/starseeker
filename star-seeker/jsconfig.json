{
  "compilerOptions": {
    "baseUrl": "src",
    "lib": ["es2020", "dom", "dom.iterable"],
    "paths": {
      "@/components/*": ["components/*"],
      "@/constants/*": ["constants/*"],
      "@/data/*": ["data/*"],
      "@/hooks/*": ["hooks/*"],
      "@/utils/*": ["utils/*"]
    },
    "target": "ES2020",
    "module": "esnext",
    "jsx": "react",
    "checkJs": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
